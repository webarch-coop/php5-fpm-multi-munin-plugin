#!/bin/bash

# Parameters:
# config (required)
# autoconf (optional - used by munin-config)

#%# family=manual
#%# capabilities=autoconf

PHP_BIN=${phpbin-"php-fpm"}
PHP_POOLS=${phppools-"www"}
pools=(`echo $PHP_POOLS`)

if [ "$1" = "autoconf" ]; then
	echo yes
	exit 0
fi

if [ "$1" = "config" ]; then
	echo "graph_title PHP-FPM Average Process Size"
	echo 'graph_args --base 1024 -l 0 '
	echo 'graph_vlabel PHP-FPM Average Process Size'
	echo 'graph_category PHP'
	echo 'graph_info This graph shows the average process size for PHP-FPM'

	for i in `seq 1 ${#pools[@]}`
	do
		pool=${pools[$i-1]}
		echo "$pool.label $pool"
		echo "$pool.draw LINE2"
		echo "$pool.info The average process size for $pool"
	done

	exit 0
fi

for i in `seq 1 ${#pools[@]}`
do
	pool=${pools[$i-1]}
	echo -n "$pool.value "
        POOL_PROCESS=$(ps awwwux | grep "php-fpm: pool ${pool}$" | awk '{ print $13 }' | uniq)
        if [[ "${POOL_PROCESS}" == "${pool}" ]]; then
		ps awwwux | grep "$PHP_BIN: pool $pool" | grep -v grep | awk '{total_mem = $6 * 1024 + total_mem; total_proc++} END{printf("%d\n", total_mem / total_proc)}'
	fi
done

